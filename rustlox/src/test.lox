
class Person {
    init(name) {
        this.name = name;
        print "[created new person " + name + "]";
    }

    greet() {
        print "Hello, " + this.name + "!";
    }

    change_name(new_name) {
        print "[changed name of " + this.name + " to " + new_name + "]";
        this.name = new_name;
    }
}

var max = Person("Max Muster");
var ref_to_max = max;
max.greet();
ref_to_max.greet();

max.change_name("Minni Mann");
max.greet();
ref_to_max.greet();

var error = Person(); // should raise a runtime error
